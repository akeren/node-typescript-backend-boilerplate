{
  "name": "node-typescript-backend-boilerplate",
  "version": "1.0.0",
  "description": "Backend node.js project with typescript setup",
  "main": "src/server.ts",
  "scripts": {
    "dev": "nodemon",
    "start": "NODE_ENV=production node -r ts-node/register/transpile-only -r tsconfig-paths/register ./dist/src/server.js",
    "build": "tsc -p tsconfig.prod.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "node",
    "api",
    "express",
    "typescript"
  ],
  "author": "Kater Akeren",
  "license": "MIT",
  "devDependencies": {
    "@types/dotenv-safe": "^8.1.1",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.12.5",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.1",
    "eslint": "^7.29.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^27.0.6",
    "nodemon": "^2.0.8",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "tsc-node": "0.0.3",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.3.4"
  },
  "dependencies": {
    "dotenv-safe": "^8.2.0"
  }
}
